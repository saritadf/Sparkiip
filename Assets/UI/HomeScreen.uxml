<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <Style src="project://database/Assets/UI/HomeStyle.uss?fileID=7433441132597879392&amp;guid=0fd9fc820e2489d43b0a22ce54b79ada&amp;type=3#HomeStyle" />
    
    <!-- Main Container -->
    <ui:VisualElement name="root" class="root">
        
        <!-- Welcome Screen - Selection Panel -->
        <ui:VisualElement name="menu-selection-panel" class="auth-panel">
            <ui:VisualElement class="auth-content">
                <!-- Logo/Brand Area -->
                <ui:VisualElement class="brand-container">
                    <ui:Label text="✨ Sparkiip" class="brand-title" />
                    <ui:Label text="Stay connected, stay close" class="brand-subtitle" />
                </ui:VisualElement>
                
                <!-- Buttons Container -->
                <ui:VisualElement class="button-container">
                    <ui:Button text="Create Account" name="RegisterButton" class="button button-primary" />
                    <ui:Button text="Sign In" name="EmailSignInButton" class="button button-secondary" />
                    <ui:VisualElement class="divider">
                        <ui:Label text="or" class="divider-text" />
                    </ui:VisualElement>
                    <ui:Button text="Continue with Google" name="GoogleSignInButton" class="button button-google" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
        
        <!-- Register Panel -->
        <ui:VisualElement name="menu-authenticate-panel" class="auth-panel" style="display: none;">
            <ui:VisualElement class="auth-content">
                <!-- Back Button -->
                <ui:Button text="← Back" name="BackToSelectionFromRegister" class="button button-back" />
                
                <!-- Header -->
                <ui:VisualElement class="auth-header">
                    <ui:Label text="Create Your Account" class="auth-title" />
                    <ui:Label text="Join Sparkiip and stay emotionally connected" class="auth-subtitle" />
                </ui:VisualElement>
                
                <!-- Form -->
                <ui:VisualElement class="form-container">
                    <ui:TextField label="Email" name="EmailInput" class="text-input" placeholder-text="your@email.com" />
                    
                    <!-- Password Field with Toggle -->
                    <ui:VisualElement class="password-field-container">
                        <ui:TextField label="Password" name="PasswordInput" password="true" class="text-input password-input" placeholder-text="At least 6 characters" />
                        <ui:Button name="TogglePasswordRegister" class="password-toggle-button">
                            <ui:Label text="👁" class="password-toggle-icon" />
                        </ui:Button>
                    </ui:VisualElement>
                    
                    <ui:Button text="Create Account" name="RegisterButton" class="button button-primary form-submit-button" />
                </ui:VisualElement>
                
                <!-- Footer -->
                <ui:Label text="Already have an account?" class="auth-footer-text" />
            </ui:VisualElement>
        </ui:VisualElement>
        
        <!-- Sign In Panel -->
        <ui:VisualElement name="menu-signin-panel" class="auth-panel" style="display: none;">
            <ui:VisualElement class="auth-content">
                <!-- Back Button -->
                <ui:Button text="← Back" name="BackToSelectionFromSignIn" class="button button-back" />
                
                <!-- Header -->
                <ui:VisualElement class="auth-header">
                    <ui:Label text="Welcome Back" class="auth-title" />
                    <ui:Label text="Sign in to continue your connection" class="auth-subtitle" />
                </ui:VisualElement>
                
                <!-- Form -->
                <ui:VisualElement class="form-container">
                    <ui:TextField label="Email" name="EmailSignIn" class="text-input" placeholder-text="your@email.com" />
                    
                    <!-- Password Field with Toggle -->
                    <ui:VisualElement class="password-field-container">
                        <ui:TextField label="Password" name="PasswordSignIn" password="true" class="text-input password-input" placeholder-text="Your password" />
                        <ui:Button name="TogglePasswordSignIn" class="password-toggle-button">
                            <ui:Label text="👁" class="password-toggle-icon" />
                        </ui:Button>
                    </ui:VisualElement>
                    
                    <ui:Button text="Sign In" name="SignIn" class="button button-primary form-submit-button" />
                </ui:VisualElement>
                
                <!-- Footer -->
                <ui:Label text="Don't have an account yet?" class="auth-footer-text" />
            </ui:VisualElement>
        </ui:VisualElement>
        
        <!-- Profile Setup Panel (Overlay) -->
        <ui:VisualElement name="profile-setup-panel" class="overlay-panel">
            <ui:VisualElement class="overlay-content">
                <ui:Label text="Welcome to Sparkiip! ✨" class="overlay-title" />
                <ui:Label text="Let's set up your profile" class="overlay-subtitle" />
                
                <ui:TextField label="Display Name" name="DisplayNameInput" class="text-input" placeholder-text="What should we call you?" max-length="30" />
                
                <ui:Label text="Choose Your Avatar" class="section-label" />
                <ui:VisualElement name="avatar-container" class="avatar-container" />
                
                <ui:VisualElement class="button-group">
                    <ui:Button text="Skip for Now" name="SkipProfileButton" class="button button-secondary" />
                    <ui:Button text="Continue" name="SubmitProfileButton" class="button button-primary" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
        
        <!-- Loading Overlay -->
        <ui:VisualElement name="loading-overlay" class="overlay-panel loading-overlay">
            <ui:VisualElement class="loading-content">
                <ui:VisualElement class="loading-spinner" />
                <ui:Label name="loading-label" text="Loading..." class="loading-text" />
            </ui:VisualElement>
        </ui:VisualElement>
        
        <!-- Message Container (Toast) -->
        <ui:VisualElement name="message-container" class="message-container">
            <ui:Label name="message-label" class="message-text" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
